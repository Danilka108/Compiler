<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:Compiler.ViewModels"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Compiler.Views.EditorView">
    <Design.DataContext>
        <vm:EditorViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto, Auto, *">
        <avaloniaEdit:TextEditor Grid.Row="0"
                                 VerticalScrollBarVisibility="Auto"
                                 x:DataType="vm:EditorViewModel" ShowLineNumbers="True" Name="TextEditor"
                                 Document="{Binding Document}" />
        <GridSplitter Grid.Row="1" Height="5" Background="LightGray" HorizontalAlignment="Stretch" />
        <DataGrid />

    </Grid>
</UserControl>