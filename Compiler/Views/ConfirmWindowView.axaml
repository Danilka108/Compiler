<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Compiler.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Compiler.Views.ConfirmWindowView"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        VerticalAlignment="Center"
        SizeToContent="WidthAndHeight"
        Title="Confirm save file">
    <Design.DataContext>
        <views:ConfirmWindowView />
    </Design.DataContext>

    <StackPanel Margin="30" x:DataType="views:ConfirmWindowView" HorizontalAlignment="Stretch">
        <WrapPanel>
            <TextBlock Text="Save file '" />
            <TextBlock Text="{Binding FileName}" />
            <TextBlock Text="' ?" />
        </WrapPanel>
        <StackPanel Spacing="20" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Command="{Binding Confirm}">
                <TextBlock Text="Save" />
            </Button>
            <Button Command="{Binding Cancel}">
                <TextBlock Text="Cancel" />
            </Button>
        </StackPanel>
    </StackPanel>
</Window>